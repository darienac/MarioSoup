{
    "version": "0.2.0",
    "configurations": [{
            "name": "C/C++: g++.exe build and debug game",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\Mario.exe",
            "args": [],
            "stopAtEntry": false,
            // "cwd": "C:\\msys64\\mingw64\\bin",
            "cwd": "${workspaceFolder}\\",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build game"
        },
